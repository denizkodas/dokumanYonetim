@model List<User>

@if (TempData["Successful"] != null)   @* Controller ile view arasında veri taşıyan asp.net core içindeki bir yapıdır:TempData *@


{
    <h5 style="color:green">@TempData["Successful"]</h5>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1>Users</h1>
        </div>
    </div>

    <table class="table table-bordered">

        <thead>

            <tr>

                <th>
                    UserId
                </th>

                <th>
                    UserName
                </th>

                <th>
                    Password
                </th>

                <th>
                    Role
                </th>

                <th>
                    ManagerId
                </th>

                <th>

                </th>

                <th>

                </th>

            </tr>

        </thead>


        <tbody>
            @foreach (var users in Model)
            {
                <tr>

                    <td>
                        @users.UserId
                    </td>

                    <td>
                        @users.UserName
                    </td>

                    <td>
                        @users.Password
                    </td>

                    <td>
                        @users.Role
                    </td>

                    <td>
                        @users.ManagerId
                    </td>


                    <td>
                        <a asp-controller="User" asp-action="Guncelle" asp-route-id="@users.UserId" type="button" class="btn btn-warning">Edit</a>
                    </td>

                    <td>
                        <a asp-controller="User" asp-action="Sil" asp-route-id="@users.UserId" type="button" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="User" asp-action="Ekle" type="button" class="btn btn-primary">
                New User
            </a>
        </div>
    </div>

</div>